{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@kovyra/theme": ["./packages/theme/src"],
      "@kovyra/theme/*": ["./packages/theme/src/*"],
      "@kovyra/ui": ["./packages/ui/src"],
      "@kovyra/ui/*": ["./packages/ui/src/*"],
      "@kovyra/app": ["./packages/app/src"],
      "@kovyra/app/*": ["./packages/app/src/*"]
    }
  }
}
