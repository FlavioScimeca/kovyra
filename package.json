{
  "name": "kovyra",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "docker": "node ./scripts/docker.mjs",
    "docker:exec": "node ./scripts/docker-exec.mjs",
    "build": "bun run nest build",
    "format": "bun biome format --write .",
    "start": "bun run nest start",
    "start:dev": "bun run nest start --watch",
    "start:debug": "bun run nest start --debug --watch",
    "start:prod": "bun dist/main",
    "lint": "bun biome lint --write .",
    "check": "bun biome check --write .",
    "sync": "bun run syncpack list-mismatches --config ./config/syncpack.config.js",
    "fix": "bun run syncpack fix-mismatches --config ./config/syncpack.config.js",
    "test": "bun test",
    "clean-nodemodules": "find . -name 'node_modules' -type d -not -path './node_modules/*' -exec rm -rf {} +",
    "test:watch": "bun test --watch",
    "test:cov": "bun test --coverage",
    "test:debug": "bun --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "bun test --config ./test/jest-e2e.json",
    "upgrade-tamagui": "bun update --latest tamagui @tamagui/*",
    "web": "cd apps/web && bun run dev",
    "doc": "cd apps/docs && bun run dev",
    "android": "cd apps/mobile && bun run android",
    "ios": "cd apps/mobile && bun run ios",
    "migration:generate": "typeorm-ts-node-commonjs migration:generate -d server/config/typeorm.config.ts",
    "migration:run": "typeorm-ts-node-commonjs migration:run -d server/config/typeorm.config.ts",
    "migration:revert": "typeorm-ts-node-commonjs migration:revert -d server/config/typeorm.config.ts",
    "graphql:generate": "bun run server/scripts/generate-schema.ts",
    "seed:users": "bun run server/scripts/seed/create-test-users.ts"
  },
  "dependencies": {
    "@apollo/server": "^4.12.0",
    "@nestjs/apollo": "^13.1.0",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^3.2.0",
    "@nestjs/core": "^11.0.1",
    "@nestjs/graphql": "^13.1.0",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/typeorm": "^11.0.0",
    "apollo-server-express": "^3.13.0",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.5.0",
    "graphql": "^16.11.0",
    "graphql-voyager": "^2.1.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.14.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "syncpack": "^13.0.3",
    "typeorm": "^0.3.22"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.2",
    "chalk": "^5.4.1",
    "inquirer": "^12.5.2",
    "jest": "^29.2.1",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.4",
    "typescript": "~5.8.3"
  },
  "jest": {
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": ["**/*.(t|j)s"],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "packageManager": "bun@1.2.19",
  "workspaces": ["apps/*", "packages/*"]
}
