# Node.js Environment
NODE_ENV=production
PORT=4001
HOST=0.0.0.0
LOG_LEVEL=info

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=${DB_PASSWORD}
DB_DATABASE=kovyra_production
DATABASE_URL=postgresql://postgres:${DB_PASSWORD}@postgres:5432/kovyra_production

# JWT Authentication
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRES_IN=1d

# Application URLs
APP_URL=https://api.kovyra.com
FRONTEND_URL=https://kovyra.com

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://kovyra.com 